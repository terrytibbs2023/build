<?xml version="1.0" encoding="UTF-8"?>
<window>
	<visible>!Window.IsVisible(startup)</visible>
	<animation type="WindowOpen">
		<effect type="zoom" start="200" end="100" time="400" tween="cubic" easing="in" center="auto" />
	</animation>
	<controls>
		<control type="image" id="1"><!-- Pointer Image -->
			<width>24</width>
			<height>24</height>
			<texture>pointer.png</texture>
		</control>
		<control type="image" id="2"><!-- Pointer Focus Image -->
			<width>24</width>
			<height>24</height>
			<texture>pointer.png</texture>
		</control>
		<control type="image" id="3"><!-- Pointer Drag Image -->
			<width>24</width>
			<height>24</height>
			<texture>pointer-drag.png</texture>
		</control>
		<control type="image" id="4"><!-- Pointer Click Image -->
			<width>24</width>
			<height>24</height>
			<texture>pointer-drag.png</texture>
		</control>
	</controls>
</window>