<?xml version="1.0" encoding="UTF-8"?>
<window>
	<onload condition="Skin.HasSetting(background-slideshow)">RunScript(script.artistslideshow, daemon=True)</onload>
	<visible>$EXP[isnotFullscreenVideo] + !Window.IsActive(script-cu-lrclyrics-main.xml) + String.IsEmpty(Window(videos).Property(PlayingBackgroundMedia))</visible>
	<controls>
		<include>backgroundsimple</include>
		<control type="group">
			<visible>Player.ShowInfo</visible>
			<control type="image"><!-- Music logo -->
				<left>30</left>
				<top>30</top>
				<width>300</width>
				<height>116</height>
				<texture>$INFO[ListItem.Art(clearlogo)]</texture>
				<aspectratio align="left" aligny="bottom">keep</aspectratio>
				<colordiffuse>mask-background</colordiffuse>
			</control>
			<control type="image"><!-- Info background -->
				<left>0</left>
				<top>700</top>
				<width>1920</width>
				<height>380</height>
				<texture>background.png</texture>
				<colordiffuse>mask-background</colordiffuse>
			</control>
			<control type="group">
				<visible>!String.StartsWith(Control.GetLabel(994),Default) + !String.StartsWith(Control.GetLabel(994),icon-radio.png) + !String.IsEmpty(MusicPlayer.TimeRemaining)</visible>
				<control type="image"><!-- CD image -->
					<left>208</left>
					<top>735</top>
					<width>322</width>
					<height>322</height>
					<texture>$VAR[PlayerDiscArt]</texture>
					<aspectratio>keep</aspectratio>
					<animation effect="slide" start="-153" end="0" time="900" tween="cubic" easing="out" delay="1000">WindowOpen</animation>
					<animation type="WindowClose">
						<effect type="slide" start="0" end="-147" time="100" tween="cubic" easing="in" delay="0" />
						<effect type="fade" start="100" end="0" time="200" />
						<condition type="!Player.Playing" />
					</animation>
					<animation effect="rotate" end="-360" center="auto" time="3000" loop="true" reversible="false" condition="!Player.Paused">Conditional</animation>
				</control>
				<control type="image">
					<left>22</left>
					<top>700</top>
					<height>396</height>
					<width>388</width>
					<texture>case-cd.png</texture>
					<aspectratio>stretch</aspectratio>
					<visible>Skin.HasSetting(media-case)</visible>
				</control>
			</control>
			<control type="image" id="994"><!-- Cover image -->
				<left>64</left>
				<top>728</top>
				<width>338</width>
				<height>338</height>
				<texture>$VAR[PlayerMusicCover]</texture>
				<aspectratio aligny="bottom">stretch</aspectratio>
			</control>
			<control type="label"><!-- Now playing -->
				<left>555</left>
				<top>726</top>
				<width>1023</width>
				<height>38</height>
				<label>$LOCALIZE[31037]</label>
				<textcolor>listselected-text</textcolor>
			</control>
			<control type="label"><!-- Partymode enabled -->
				<left>1485</left>
				<top>732</top>
				<width>399</width>
				<height>33</height>
				<label>$LOCALIZE[589]</label>
				<align>right</align>
				<font>apptv22</font>
				<visible>MusicPartyMode.Enabled</visible>
			</control>
			<control type="label"><!-- Playlist label -->
				<left>1461</left>
				<top>732</top>
				<width>399</width>
				<height>33</height>
				<align>right</align>
				<label>$INFO[Playlist.Position(music),$LOCALIZE[554]: ]$INFO[Playlist.Length(music), / ]</label>
				<font>apptv22</font>
				<visible>!MusicPartyMode.Enabled + Integer.IsGreater(Playlist.Length(music),1) + !String.IsEmpty(MusicPlayer.TimeRemaining)</visible>
			</control>
			<control type="label"><!-- Info line1 -->
				<left>555</left>
				<top>768</top>
				<width>1320</width>
				<height>35</height>
				<font>apptv23</font>
				<label>$VAR[PlayerMusicInfo1]</label>
			</control>
			<control type="label"><!-- Info line2 -->
				<left>555</left>
				<top>804</top>
				<width>1320</width>
				<height>32</height>
				<font>apptv20</font>
				<label>$VAR[PlayerMusicInfo2]</label>
			</control>
			<control type="label"><!-- Info line3 -->
				<left>555</left>
				<top>838</top>
				<width>1320</width>
				<height>32</height>
				<font>apptv20</font>
				<label>$VAR[PlayerMusicInfo3]</label>
			</control>
			<control type="label"><!-- Info line4 -->
				<left>555</left>
				<top>872</top>
				<width>1320</width>
				<height>32</height>
				<font>apptv20</font>
				<label>$VAR[PlayerMusicInfo4]</label>
			</control>
			<control type="image">
				<left>552</left>
				<top>906</top>
				<width>51</width>
				<height>38</height>
				<fadetime>200</fadetime>
				<aspectratio align="center" aligny="top">keep</aspectratio>
				<texture>$INFO[MusicPlayer.Codec,special://skin/extras/images/audio/,.png]</texture>
			</control>
			<control type="image">
				<left>598</left>
				<top>906</top>
				<width>51</width>
				<height>38</height>
				<fadetime>200</fadetime>
				<aspectratio align="center" aligny="top">keep</aspectratio>
				<texture>$INFO[MusicPlayer.SampleRate,special://skin/extras/images/samplerate/,.png]</texture>
			</control>
			<control type="image">
				<left>644</left>
				<top>906</top>
				<width>51</width>
				<height>38</height>
				<fadetime>200</fadetime>
				<aspectratio align="center" aligny="top">keep</aspectratio>
				<texture>$INFO[MusicPlayer.BitsPerSample,special://skin/extras/images/samplesize/,.png]</texture>
			</control>
			<control type="label"><!-- Time label -->
				<left>555</left>
				<top>1034</top>
				<width>300</width>
				<height>33</height>
				<label>$INFO[MusicPlayer.Time]$INFO[MusicPlayer.Duration, / ]</label>
				<font>apptv22</font>
				<visible>!Pvr.IsPlayingRadio + !String.IsEmpty(MusicPlayer.TimeRemaining)</visible>
			</control>
			<control type="group">
				<animation effect="fade" start="100" end="0" condition="String.IsEmpty(MusicPlayer.TimeRemaining)">Conditional</animation>
				<control type="progress" id="1">
					<left>862</left>
					<top>1042</top>
					<width>1012</width>
					<height>18</height>
					<info>Player.Progress</info>
				</control>
				<control type="slider" id="402"><!-- Seek slider -->
					<left>862</left>
					<top>1042</top>
					<width>1012</width>
					<height>18</height>
					<action>seek</action>
				</control>
			</control>
		</control>
	</controls>
</window>