<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">3012</defaultcontrol>
	<onload>Dialog.Close(fullscreeninfo,true)</onload>
	<onload>Dialog.Close(videoosd,true)</onload>
	<controls>
		<control type="group">
			<include>window-openclose</include>
			<control type="group">
				<height>181</height>
				<control type="image">
					<top>0</top>
					<width>100%</width>
					<height>181</height>
					<texture colordiffuse="mask-background">background-mask.png</texture>
				</control>
				<control type="group">
					<top>20</top>
					<left>20</left>
					<control type="textbox">
						<top>10</top>
						<left>10</left>
						<width>230</width>
						<height>121</height>
						<font>apptv22</font>
						<align>center</align>
						<aligny>center</aligny>
						<label>$INFO[Window.Property(tvshowtitle)]</label>
						<visible>String.IsEmpty(Window.Property(thumb)) + String.IsEmpty(Window.Property(landscape)) + String.IsEmpty(Window.Property(fanart))</visible>
					</control>
					<control type="image">
						<width>250</width>
						<height>141</height>
						<texture>$VAR[UpNextImage]</texture>
						<aspectratio>scale</aspectratio>
					</control>
					<control type="progress" id="3014">
						<width>250</width>
						<top>134</top>
						<height>8</height>
						<reveal>true</reveal>
					</control>
				</control>
				<control type="group">
					<top>20</top>
					<left>290</left>
					<right>20</right>
					<control type="label"><!-- Time -->
						<width>auto</width>
						<height>38</height>
						<aligny>center</aligny>
						<label>[CAPITALIZE]$ADDON[service.upnext 30024][/CAPITALIZE]</label>
					</control>
					<control type="grouplist">
						<orientation>horizontal</orientation>
						<height>35</height>
						<top>40</top>
						<itemgap>0</itemgap>
						<control type="label">
							<width>auto</width>
							<height>30</height>
							<aligny>center</aligny>
							<font>apptv22</font>
							<label>$INFO[Window.Property(tvshowtitle),, - ]$INFO[Window.Property(season),S,]$INFO[Window.Property(episode),E, - ]$INFO[Window.Property(title)]   </label>
							<visible>!String.IsEmpty(Window.Property(title))</visible>
						</control>
						<control type="label">
							<width>auto</width>
							<height>35</height>
							<aligny>center</aligny>
							<font>apptv22</font>
							<label>$INFO[Window.Property(year),,   ]</label>
							<visible>!String.IsEmpty(Window.Property(year))</visible>
						</control>
						<control type="image">
							<width>32</width>
							<height>32</height>
							<aspectratio>keep</aspectratio>
							<texture colordiffuse="ProgressBarColor">star.png</texture>
							<animation effect="slide" end="0,2" time="0" condition="true">Conditional</animation>
							<visible>!String.IsEmpty(Window.Property(rating))</visible>
						</control>
						<control type="label">
							<width>auto</width>
							<height>35</height>
							<aligny>center</aligny>
							<label>$INFO[Window.Property(rating), ,   ]</label>
							<font>apptv22</font>
							<visible>!String.IsEmpty(Window.Property(rating))</visible>
						</control>
					</control>
					<control type="grouplist">
						<orientation>horizontal</orientation>
						<height>56</height>
						<bottom>20</bottom>
						<itemgap>10</itemgap>
						<control type="button" id="3012">
							<label>    $LOCALIZE[31682] [COLOR FF7070FF]$INFO[Player.TimeRemaining(ss),,][/COLOR] $LOCALIZE[31812]</label>
							<height>56</height>
							<width min="50">auto</width>
							<font>apptv23</font>
							<aligny>center</aligny>
							<align>center</align>
						</control>
						<control type="button" id="3013">
							<label>$ADDON[service.upnext 30034]</label>
							<height>56</height>
							<width min="50">auto</width>
							<font>apptv23</font>
							<aligny>center</aligny>
							<align>center</align>
						</control>
					</control>
					<control type="image">
						<bottom>20</bottom>
						<width>46</width>
						<height>46</height>
						<aspectratio>keep</aspectratio>
						<texture colordiffuse="button-text">upnexticons/00.png</texture>
						<animation effect="slide" end="13,-5" time="0" condition="true">Conditional</animation>
					</control>
				</control>
			</control>
		</control>
	</controls>
</window>