<?xml version="1.0" encoding="utf-8"?>
<!-- BINGIE -->
<includes>

    <!-- SQUARE LAYOUT -->
    <include name="SquarePosterPanelLayout">
        <control type="image">
            <include>SquareThumb</include>
            <visible>!String.StartsWith(ListItem.FileNameAndPath, pvr://)</visible>
        </control>
        <control type="image">
            <aspectratio scalediffuse="false" aligny="center">keep</aspectratio>
            <include>SquareThumbPVR</include>
            <visible>String.StartsWith(ListItem.FileNameAndPath, pvr://)</visible>
        </control>
        <control type="group">
            <!--Watched Overlay-->
            <right>8</right>
            <top>8</top>
            <include>WatchedIndicatorSmall</include>
        </control>
    </include>
    <include name="SquarePosterPanelLayoutFocus">
        <control type="image">
            <include>SquareThumbFO</include>
            <include>thumbsborder_focused</include>
        </control>
        <control type="image">
            <include>SquareThumb</include>
            <visible>!String.StartsWith(ListItem.FileNameAndPath, pvr://)</visible>
        </control>
        <control type="image">
            <aspectratio scalediffuse="false" aligny="center">keep</aspectratio>
            <include>SquareThumbPVR</include>
            <visible>String.StartsWith(ListItem.FileNameAndPath, pvr://)</visible>
        </control>
        <control type="group">
            <!--Watched Overlay-->
            <right>8</right>
            <top>8</top>
            <include>WatchedIndicatorSmall</include>
        </control>
    </include>
	
	<!-- SQUARE LAYOUT -->
    <include name="SquarePosterPanelBingieLayout">
        <control type="image">
            <include>SquareThumb</include>
            <visible>!String.StartsWith(ListItem.FileNameAndPath, pvr://)</visible>
        </control>
        <control type="image">
            <aspectratio scalediffuse="false" aligny="center">keep</aspectratio>
            <include>SquareThumbPVR</include>
            <visible>String.StartsWith(ListItem.FileNameAndPath, pvr://)</visible>
        </control>
		<include>Square_New_Episodes_Tag_Overlay</include>
        <control type="group">
            <!--Watched Overlay-->
            <right>8</right>
            <top>8</top>
            <include>WatchedIndicatorBingieNormal</include>
        </control>
    </include>
    <include name="SquarePosterPanelBingieLayoutFocus">
        <control type="image">
            <include>SquareThumbFO</include>
            <include>thumbsborder_focused</include>
        </control>
        <control type="image">
            <include>SquareThumb</include>
            <visible>!String.StartsWith(ListItem.FileNameAndPath, pvr://)</visible>
        </control>
        <control type="image">
            <aspectratio scalediffuse="false" aligny="center">keep</aspectratio>
            <include>SquareThumbPVR</include>
            <visible>String.StartsWith(ListItem.FileNameAndPath, pvr://)</visible>
        </control>
		<include>Square_New_Episodes_Tag_Overlay</include>
        <control type="group">
            <!--Watched Overlay-->
            <right>8</right>
            <top>8</top>
            <include>WatchedIndicatorBingieNormal</include>
        </control>
    </include>

    <include name="SquareThumb">
        <bordersize>8</bordersize>
        <texture background="true" diffuse="diffuse/music_cover.png" fallback="defaultvideo.png">$VAR[SquarePosterThumb]</texture>
        <aspectratio scalediffuse="false" aligny="center">scale</aspectratio>
    </include>
	<include name="SquareThumbPVR">
        <bordersize>8</bordersize>
        <texture background="true" diffuse="diffuse/music_cover.png" fallback="defaultaddonpvrclient.png">$VAR[SquarePosterThumb]</texture>
        <aspectratio scalediffuse="false" aligny="center">scale</aspectratio>
    </include>
    <include name="SquareThumbFO">
        <aspectratio aligny="center">stretch</aspectratio>
        <texture>diffuse/music_cover.png</texture>
        <colordiffuse>$INFO[Skin.String(ViewDetailsBorderFocusColor)]</colordiffuse>
    </include>

    <include name="SquarePosterTagOverlay">
        <control type="group">
            <visible>!String.IsEqual(ListItem.Label,..)</visible>
			<visible>!String.Contains(ListItem.Label,$LOCALIZE[33078])</visible>
			<visible>[Skin.String(Views_DisplayTags,music) | Skin.String(Views_DisplayTags,both)] + [String.IsEqual(ListItem.DBTYPE,song) | String.IsEqual(ListItem.Property(DBTYPE),song) | String.IsEqual(ListItem.DBTYPE,album) | String.IsEqual(ListItem.Property(DBTYPE),album) | String.IsEqual(ListItem.DBTYPE,artist) | String.IsEqual(ListItem.Property(DBTYPE),artist)] + [Window.IsActive(MyVideoNav.xml) | Window.IsActive(MyMusicNav.xml)] | [String.IsEqual(ListItem.DBTYPE,episode) | String.IsEqual(ListItem.Property(DBTYPE),episode)] + [Skin.String(Views_DisplayTags,episodes) | Skin.String(Views_DisplayTags,both)] + [Window.IsActive(MyVideoNav.xml) | Window.IsActive(MyMusicNav.xml)] | ![!String.IsEqual(ListItem.Property(tmdb_type),person) + !Skin.String(Views_DisplayTags,enable) + [Window.IsActive(MyVideoNav.xml) | Window.IsActive(MyMusicNav.xml)]]</visible>
            <control type="image">
                <bottom>0</bottom>
                <height>74</height>
                <bordersize>8</bordersize>
                <texture>diffuse/poster_tag2.png</texture>
                <colordiffuse>$INFO[Skin.String(TagOverlaysPanelColor)]</colordiffuse>
            </control>
            <control type="textbox">
                <left>15</left>
                <right>15</right>
                <bottom>9</bottom>
                <height>57</height>
                <include condition="Skin.HasSetting(ThumbsLabelAlignmentCenter)">align_center</include>
                <align>left</align>
                <aligny>center</aligny>
                <label>$VAR[ThumbListDetailsSquare]</label>
                <font>postertagsmall</font>
                <autoscroll>false</autoscroll>
                <textcolor>$INFO[Skin.String(TagOverlaysTextColor)]</textcolor>
                <visible>!String.IsEqual(System.CurrentControl,ListItem.Label)</visible>
            </control>
            <control type="textbox">
                <left>15</left>
                <right>15</right>
                <bottom>9</bottom>
                <height>57</height>
                <include condition="Skin.HasSetting(ThumbsLabelAlignmentCenter)">align_center</include>
                <align>left</align>
                <aligny>center</aligny>
                <label>$VAR[ThumbListDetailsSquare]</label>
                <font>postertagsmall</font>
                <autoscroll delay="2000" time="2000" repeat="500">true</autoscroll>
                <textcolor>$INFO[Skin.String(TagOverlaysTextColor)]</textcolor>
                <visible>String.IsEqual(System.CurrentControl,ListItem.Label)</visible>
            </control>
        </control>
    </include>
	
	<include name="SquarePosterTagOverlayBingie">
        <control type="group">
            <visible>!String.IsEqual(ListItem.Label,..)</visible>
			<visible>!String.Contains(ListItem.Label,$LOCALIZE[33078])</visible>
			<visible>!String.IsEqual(ListItem.Property(tmdb_type),person)</visible>
            <control type="image">
                <bottom>0</bottom>
                <height>76</height>
                <bordersize>8</bordersize>
                <texture>diffuse/poster_tag2.png</texture>
                <colordiffuse>$INFO[Skin.String(TagOverlaysPanelColor)]</colordiffuse>
            </control>
            <control type="textbox">
                <left>15</left>
                <right>15</right>
                <bottom>10</bottom>
                <height>57</height>
                <include condition="Skin.HasSetting(ThumbsLabelAlignmentCenter)">align_center</include>
                <align>left</align>
                <aligny>center</aligny>
                <label>$VAR[ThumbListDetailsSquare]</label>
                <font>Reg21</font>
                <autoscroll>false</autoscroll>
                <textcolor>$INFO[Skin.String(TagOverlaysTextColor)]</textcolor>
            </control>
        </control>
    </include>
	
	<include name="SquarePosterTagOverlayBingieNoOverride">
        <control type="group">
            <visible>!String.IsEqual(ListItem.Label,..)</visible>
			<visible>!String.Contains(ListItem.Label,$LOCALIZE[33078])</visible>
			<visible>String.IsEqual(ListItem.Property(tmdb_type),person)</visible>
            <control type="image">
                <bottom>0</bottom>
                <height>76</height>
                <bordersize>8</bordersize>
                <texture>diffuse/poster_tag2.png</texture>
                <colordiffuse>$INFO[Skin.String(TagOverlaysPanelColor)]</colordiffuse>
            </control>
            <control type="textbox">
                <left>15</left>
                <right>15</right>
                <bottom>10</bottom>
                <height>57</height>
                <include condition="Skin.HasSetting(ThumbsLabelAlignmentCenter)">align_center</include>
                <align>left</align>
                <aligny>center</aligny>
                <label>$VAR[ThumbListDetailsSquare]</label>
                <font>Reg21</font>
                <autoscroll>false</autoscroll>
