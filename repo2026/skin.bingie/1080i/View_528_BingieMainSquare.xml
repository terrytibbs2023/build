<?xml version="1.0" encoding="utf-8"?>
<!-- BINGIE -->
<includes>
    <include name="View_528_Bingie_Main_Square">
        <control type="group">
            <include>FullscreenDimensions</include>
            <visible>Control.IsVisible(528)</visible>
            <include>animation_view_change</include>

            <include content="Bingie_Main_Spotlight_Section">
                <param name="id" value="528" />
            </include>

            <!-- View 528 -->
            <control type="group">
                <left>131</left>
                <top>600</top>
                <width>1660</width>
                <!-- Content Header -->
                <control type="label">
                    <include condition="Skin.HasSetting(EnableRatings)">FooterON</include>
					<include condition="!Skin.HasSetting(EnableRatings)">FooterOFF</include>
                    <height>40</height>
					<posx>8</posx>
					<top>-36</top>
                    <font>Bold31</font>
                    <align>left</align>
                    <textcolor>$INFO[Skin.String(BingieHeaderTextColor)]</textcolor>
                    <label>$VAR[BingieMainContentHeader]</label>
                    <visible>Integer.IsGreater(Container(528).NumItems,0)</visible>
					<visible>!Container.Content(episodes) + !Container.Content(seasons)</visible>
					<visible>!Skin.HasSetting(View528_HideHeader)</visible>
                </control>

                <include content="Bingie_Main_Square_View">
                    <param name="containerType" value="panel" />
                </include>
            </control>
			
		   <!-- scrollbar -->
            <control type="group">
                <control type="scrollbar" id="60">
					<texturesliderbackground border="5" colordiffuse="$INFO[Skin.String(ScrollbarBackgroundColor)]">scrollbar/texturesliderbar_small.png</texturesliderbackground>
					<texturesliderbar colordiffuse="$INFO[Skin.String(ScrollbarUnfocusedColor)]" border="5">scrollbar/texturesliderbar_small.png</texturesliderbar>
					<texturesliderbarfocus colordiffuse="$INFO[Skin.String(ScrollbarFocusedColor)]" border="5">scrollbar/texturesliderbar_small.png</texturesliderbarfocus>
					<textureslidernib colordiffuse="$INFO[Skin.String(ScrollbarUnfocusedColor)]">scrollbar/texturesliderbar_nib.png</textureslidernib>
					<textureslidernibfocus colordiffuse="$INFO[Skin.String(ScrollbarFocusedColor)]">scrollbar/texturesliderbar_nib.png</textureslidernibfocus>
                    <visible>Control.IsVisible(528) + Integer.IsGreater(Container.NumItems,0)</visible>
                    <width>10</width>
					<height>466</height>
                    <right>0</right>
                    <bottom>0</bottom>
                    <onleft>528</onleft>
                    <orientation>vertical</orientation>
                    <animation effect="fade" start="0" end="100" time="400" condition="[Control.HasFocus(60) | String.IsEqual(Skin.String(scrollbar_visibility),always_show)]">Conditional</animation>
                    <animation effect="fade" start="100" end="0" time="400" condition="![Control.HasFocus(60) | String.IsEqual(Skin.String(scrollbar_visibility),always_show)]">Conditional</animation>
                </control>
            </control>
        </control>
    </include>

    <!-- Container -->
    <include name="Bingie_Main_Square_View">
        <control type="$PARAM[containerType]" id="528">
            <viewtype label="31122">Bingie Square</viewtype>
            <include content="View_Forced">
                <param name="viewtype" value="$LOCALIZE[31122]" />
            </include>
            <focusedposition>0</focusedposition>
            <top>6</top>
            <width>1674</width>
            <height>474</height>
            <orientation>vertical</orientation>
            <itemgap>0</itemgap>
            <preloaditems>4</preloaditems>
            <pagecontrol>60</pagecontrol>
            <include>ScrollTime</include>
            <onright>60</onright>
			<onleft>9000</onleft>
            <onup>528</onup>
            <ondown>528</ondown>
			<onback>CancelAlarm(preview_delay,silent)</onback>
			<onback condition="!Player.HasAudio + $EXP[IsPlayingUnrecognizedContent] + [String.IsEqual(ListItem.DBType,movie) | String.IsEqual(ListItem.DBType,tvshow)] + Skin.HasSetting(View528_DetailsAutoTrailer)">PlayerControl(Stop)</onback>
			<onback>ClearProperty(HideNowPlaying)</onback>
            <itemlayout height="339" width="279">
                <control type="group">
                    <width>280</width>
                    <height>280</height>
                    <include>SquarePosterPanelBingieLayout</include>
					<control type="label">
						<!--Label-->
						<left>8</left>
						<right>8</right>
						<bottom>-47</bottom>
						<height>61</height>
						<include condition="Skin.HasSetting(ThumbsLabelAlignmentCenter)">align_center</include>
						<align>left</align>
						<aligny>center</aligny>
						<label>[B]$VAR[SquareListDetails][/B]</label>
						<font>Reg26</font>
						<textcolor>$INFO[Skin.String(TagOverlaysTextColor)]</textcolor>
					</control>
                </control>
            </itemlayout>
            <focusedlayout height="339" width="279">
                <control type="group">
                    <width>280</width>
                    <height>280</height>
                    <include>SquarePosterPanelBingieLayoutFocus</include>
					<control type="label">
						<!--Label-->
						<left>8</left>
						<right>8</right>
						<bottom>-47</bottom>
						<height>61</height>
						<include condition="Skin.HasSetting(ThumbsLabelAlignmentCenter)">align_center</include>
						<align>left</align>
						<aligny>center</aligny>
						<label>[B]$VAR[SquareListDetails][/B]</label>
						<font>Reg26</font>
						<scroll>true</scroll>
						<textcolor>$INFO[Skin.String(TagOverlaysTextColor)]</textcolor>
					</control>
					<include>LibraryAutoTrailerStopButton</include>
						<include content="LibraryAutoTrailerStartButton" condition="Skin.HasSetting(View528_DetailsAutoTrailer)">
							<param name="interval" value="$INFO[Skin.String(details_auto_trailer_interval)]" />
						</include>
                </control>
            </focusedlayout>
        </control>
    </include>
</includes>