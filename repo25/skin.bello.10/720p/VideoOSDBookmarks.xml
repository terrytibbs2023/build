<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">9000</defaultcontrol>
	<controls>
		<control type="group">
			<left>48</left>
			<top>550</top>
			<include>VisibleHiddenSlideAnimation</include>
			<animation type="Conditional" condition="Window.IsActive(notification) | Window.IsActive(extendedprogressdialog) | Window.IsActive(BusyDialog)">
				<effect type="slide" start="0,0" end="0,-50" time="250" tween="qubic" easing="out"/>
			</animation>
			<visible>![Window.IsActive(ShutdownMenu) | Window.IsActive(NumericInput)]</visible>
			<control type="panel" id="11">
				<left>0</left>
				<top>0</top>
				<width>1200</width>
				<height>185</height>
				<onleft>11</onleft>
				<onright>11</onright>
				<ondown>Action(close)</ondown>
				<onup>9000</onup>
				<preloaditems>2</preloaditems>
				<orientation>horizontal</orientation>
				<scrolltime tween="Quadratic" easing="out">400</scrolltime>
				<pagecontrol></pagecontrol>
				<animation type="WindowOpen" reversible="false">
					<include>CommonVisibleEffect</include>
				</animation>
				<animation type="WindowClose" reversible="false">
					<include>CommonHiddenEffect</include>
				</animation>
				<itemlayout height="185" width="240">
					<control type="image">
						<width>223</width>
						<height>133</height>
						<texture diffuse="thumbs/landscape_diffuse.png">thumbs/thumb_back.png</texture>
					</control>
					<control type="image">
						<top>1</top>
						<width>223</width>
						<height>131</height>
						<aspectratio align="center" aligny="center" scalediffuse="false">scale</aspectratio>
						<texture border="1,0,1,0" fallback="thumbs/fallback_fanart_tp.png" diffuse="thumbs/landscape_diffuse.png">$INFO[ListItem.Icon]</texture>
					</control>
					<control type="image">
						<width>223</width>
						<height>133</height>
						<texture border="1">thumbs/landscape_overlay.png</texture>
					</control>
					<control type="label">
						<right>28</right>
						<top>105</top>
						<width>233</width>
						<height>20</height>
						<font>FontSize_18</font>
						<scroll>false</scroll>
						<align>right</align>
						<aligny>center</aligny>
						<label>$INFO[ListItem.Label2]</label>
					</control>
				</itemlayout>
				<focusedlayout height="185" width="240">
					<control type="image">
						<width>223</width>
						<height>133</height>
						<texture diffuse="thumbs/landscape_diffuse.png">thumbs/thumb_back.png</texture>
					</control>
					<control type="image">
						<top>1</top>
						<width>223</width>
						<height>131</height>
						<aspectratio align="center" aligny="center" scalediffuse="false">scale</aspectratio>
						<texture border="1,0,1,0" fallback="thumbs/fallback_fanart_tp.png" diffuse="thumbs/landscape_diffuse.png">$INFO[ListItem.Icon]</texture>
					</control>
					<control type="image">
						<width>223</width>
						<height>133</height>
						<texture border="1">thumbs/landscape_play.png</texture>
						<animation reversible="false" effect="fade" start="0" end="100" time="200">Focus</animation>
						<animation reversible="false" effect="fade" start="100" end="0" time="200">UnFocus</animation>
					</control>
					<control type="image">
						<width>223</width>
						<height>133</height>
						<texture border="1">thumbs/landscape_overlay.png</texture>
					</control>
					<control type="label">
						<right>28</right>
						<top>105</top>
						<width>233</width>
						<height>20</height>
						<font>FontSize_18</font>
						<scroll>false</scroll>
						<align>right</align>
						<aligny>center</aligny>
						<label>$INFO[ListItem.Label2]</label>
					</control>
				</focusedlayout>
			</control>
		</control>

		<!-- ============== -->
		<!-- == Top Menu == -->
		<!-- ============== -->
		<control type="group">
			<left>45</left>
			<top>25</top>
			<visible>!Window.IsActive(ShutdownMenu) + !Window.IsActive(ContextMenu)</visible>
			<include>CommonDialogsAnimation</include>

			<!-- Main Buttons -->
			<control type="grouplist" id="9000">
				<include content="CommonTopInfoGroupList">
					<param name="onup" value="Action(close)"/>
					<param name="ondown" value="11"/>
					<param name="include" value="Logo"/>
				</include>
				<control type="label" id="999">
					<include>TopBigLabel</include>
					<label>$LOCALIZE[298]</label>
				</control>
				<control type="button" id="2">
					<description>Add Bookmark</description>
					<label>$LOCALIZE[294]</label>
					<include>TopMenuButton</include>
				</control>
				<control type="button" id="3">
					<description>Delete Bookmark</description>
					<label>$LOCALIZE[296]</label>
					<include>TopMenuButton</include>
				</control>
				<control type="button" id="4">
					<description>Add Episode Bookmark</description>
					<label>$LOCALIZE[20406]</label>
					<include>TopMenuButton</include>
					<visible>VideoPlayer.Content(Episodes)</visible>
				</control>
			</control>
			<include content="PageCountLabel">
				<param name="left" value="60"/>
				<param name="label" value="$VAR[ContainerNumItems]"/>
				<param name="visible" value="!Window.IsActive(ShutdownMenu) + !Window.IsActive(ContextMenu)"/>
			</include>

			<control type="label..">
				<description>Page Count Label</description>
				<left>58</left>
				<top>45</top>
				<width>300</width>
				<height>20</height>
				<font>FontSize_18</font>
				<textcolor>$VAR[Text.GlobalColor]</textcolor>
				<scroll>false</scroll>
				<align>left</align>
				<aligny>center</aligny>
				<label>$VAR[ContainerNumItems]</label>
				<visible>!Window.IsActive(ShutdownMenu) + !Window.IsActive(ContextMenu)</visible>
			</control>
		</control>
	</controls>
</window>