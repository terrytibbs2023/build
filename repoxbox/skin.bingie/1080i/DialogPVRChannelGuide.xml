<?xml version="1.0" encoding="utf-8"?>
<!-- BINGIE -->
<window>
    <defaultcontrol always="true">10</defaultcontrol>
    <controls>
        <control type="button" id="10">
            <onfocus condition="!Skin.HasSetting(pvrGuideOnFullscreenVideo)">SetProperty(pvrGuideOnFullscreenVideo,fullscreenvideo,Home)</onfocus>
            <onfocus condition="!Skin.HasSetting(pvrGuideOnFullscreenVideo)">Dialog.Close(VideoOSD)</onfocus>
            <onfocus condition="!Skin.HasSetting(pvrGuideOnFullscreenVideo)">Dialog.Close(seekbar)</onfocus>
            <onfocus condition="!Skin.HasSetting(pvrGuideOnFullscreenVideo)">Dialog.Close(pvrchannelguide)</onfocus>
            <onfocus condition="!Skin.HasSetting(pvrGuideOnFullscreenVideo)">Dialog.Close(fullscreenvideo)</onfocus>
            <onfocus condition="!Skin.HasSetting(pvrGuideOnFullscreenVideo)">ActivateWindow(tvguide)</onfocus>
            <onfocus condition="Skin.HasSetting(pvrGuideOnFullscreenVideo)">SetFocus(11)</onfocus>
            <visible allowhiddenfocus="true">false</visible>
        </control>
		<!--Dialog Overlay-->
		<control type="group">
			<visible>!Window.IsActive(fullscreenvideo) + Skin.HasSetting(pvrGuideOnFullscreenVideo)</visible>
			<include>DialogOverlayExtra</include>
			<animation effect="fade" time="250" start="0" end="100" reversible="false">WindowOpen</animation>
			<animation effect="fade" time="250" start="100" end="0" reversible="false">WindowClose</animation>
        </control>
		<!-- osd setings background -->
		<control type="image">
			<include>FullscreenDimensions</include>
			<texture background="true">diffuse/panel2.png</texture>
			<colordiffuse>b3000000</colordiffuse>
			<visible>Window.IsActive(fullscreenvideo)</visible>
			<animation effect="fade" time="250" start="0" end="100" reversible="false">WindowOpen</animation>
			<animation effect="fade" time="250" start="100" end="0" reversible="false">WindowClose</animation>
		</control>
		<control type="group">
			<visible>Skin.HasSetting(pvrGuideOnFullscreenVideo)</visible>
			<posx>-660</posx>
			<posy>0</posy>
			<animation type="WindowOpen">
				<effect type="slide" start="0" end="660" time="250" tween="cubic" easing="inout" />
			</animation>
			<animation type="WindowClose">
				<effect type="slide" start="660" end="0" time="250" tween="cubic" easing="inout" />
			</animation>
			<!--Panel-->
			<control type="image">
				<posy>-250</posy>
				<posx>-20</posx>
				<width>700</width>
				<height>1750</height>
				<texture border="5">diffuse/panel2.png</texture>
				<colordiffuse>$INFO[Skin.String(OSDPanelColor)]</colordiffuse>
				<aspectratio>stretch</aspectratio>
			</control>
            <control type="image">
				<posy>-250</posy>
				<posx>-20</posx>
				<width>700</width>
				<height>1750</height>
				<texture border="5">diffuse/panel2.png</texture>
				<colordiffuse>$INFO[Skin.String(OSDPanelColor)]</colordiffuse>
				<aspectratio>stretch</aspectratio>
			</control>
			
			<control type="image">
				<!--Channel Icon-->
				<posx>10</posx>
				<posy>25</posy>
				<width>100</width>
				<height>100</height>
				<texture background="true">$INFO[VideoPlayer.Cover]</texture>
				<aspectratio>keep</aspectratio>
			</control>

		
			<!-- header -->
			<control type="label">
				<posx>140</posx>
				<posy>3</posy>
				<width min="80" max="524">auto</width>
				<height>100</height>
				<font>Bold45</font>
				<align>left</align>
				<textcolor>$INFO[Skin.String(HeaderTextColor)]</textcolor>
				<label>$LOCALIZE[19222]$INFO[VideoPlayer.ChannelName, â€¢ ,]</label>
				<visible>!Window.IsActive(notification) + !Window.IsActive(extendedprogressdialog)</visible>
				<animation effect="slide" end="0,19" time="0" reversible="false" condition="String.IsEmpty(ListItem.StartDate)">Conditional</animation>
			</control>
			
			<control type="label">
				<!--Info Time Date-->
				<posx>140</posx>
				<posy>73</posy>
				<width>524</width>
				<height>50</height>
				<font>Reg28</font>
				<textcolor>$INFO[Skin.String(HeaderTextColor)]</textcolor>
				<label>$INFO[Container(11).ListItem.StartDate]</label>				
			</control>
			
			<!--Label Menu: -->
			<control type="image">
				<!--Seperator-->
				<posx>-80</posx>
				<posy>140</posy>
				<width>740</width>
				<height>10</height>
				<align>left</align>
				<texture border="10">common/menu-separator2.png</texture>
				<visible>String.IsEmpty(ListItem.StartDate)</visible>				
			</control>
			
			<!--List ID=11-->
			<control type="list" id="11">
				<posx>10</posx>
				<posy>150</posy>
				<width>670</width>
				<height>930</height>
				<onright>dialog.close(all,true)</onright>
				<onup>11</onup>
				<ondown>11</ondown>
				<pagecontrol>60</pagecontrol>
				<scrolltime>200</scrolltime>
				<itemlayout height="62" width="667">
					<control type="label">
						<!--Time-->
						<posx>10</posx>
						<posy>17</posy>
						<width>130</width>
						<height>25</height>
						<font>Reg26</font>
						<textcolor>$INFO[Skin.String(OSDPrimaryTextColor)]</textcolor>						
						<align>left</align>
						<info>ListItem.StartTime</info>
					</control>
					<control type="image">
						<!--Rec-->
						<animation effect="slide" start="0" end="50" time="0" reversible="false" condition="String.Contains(System.Time, AM) | String.Contains(System.Time, PM)">Conditional</animation>
						<posx>90</posx>
						<posy>3</posy>
						<width>55</width>
						<height>55</height>
						<texture>pvr/icons/pvr_record.png</texture>
						<visible>ListItem.IsRecording</visible>
					</control>
					<control type="image">
						<!--Timer-->
					    <animation effect="slide" start="0" end="50" time="0" reversible="false" condition="String.Contains(System.Time, AM) | String.Contains(System.Time, PM)">Conditional</animation>
						<posx>90</posx>
						<posy>3</posy>
						<width>55</width>
						<height>55</height>
						<texture>pvr/icons/pvr_timer.png</texture>
						<visible>!ListItem.IsRecording + ListItem.HasTimer + !ListItem.HasTimerSchedule</visible>
					</control>
					<control type="label">
						<!--Channel Name-->
						<animation effect="slide" start="0" end="50" time="0" reversible="false" condition="String.Contains(System.Time, AM) | String.Contains(System.Time, PM)">Conditional</animation>
						<posx>100</posx>
						<posy>17</posy>
						<width>490</width>
						<height>25</height>
						<font>Reg28</font>
						<textcolor>$INFO[Skin.String(OSDPrimaryTextColor)]</textcolor>						
						<align>left</align>
						<aligny>center</aligny>
						<label>$INFO[ListItem.Label]</label>
						<visible>!ListItem.Isplaying + !ListItem.IsRecording + !ListItem.HasTimer</visible>
					</control>
					<control type="label">
						<!--Channel Name-->
						<animation effect="slide" start="0" end="50" time="0" reversible="false" condition="String.Contains(System.Time, AM) | String.Contains(System.Time, PM)">Conditional</animation>
						<posx>143</posx>
						<posy>17</posy>
						<width>490</width>
						<height>25</height>
						<font>Reg28</font>
						<textcolor>$INFO[Skin.String(OSDPrimaryTextColor)]</textcolor>						
						<align>left</align>
						<aligny>center</aligny>
						<label>$INFO[ListItem.Label]</label>
						<visible>ListItem.Isplaying | ListItem.IsRecording | ListItem.HasTimer</visible>
					</control>
					<control type="image">
						<!--Separator-->
						<posx>0</posx>
						<posy>0</posy>
						<width>660</width>
						<height>2</height>
						<fadetime>400</fadetime>
						<colordiffuse>BBFFFFFF</colordiffuse>
						<texture>common/separator.png</texture>
					</control>
				</itemlayout>
				<focusedlayout height="175" width="667">
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>660</width>
						<height>175</height>
						<texture border="10">diffuse/panel.png</texture>
						<colordiffuse>$INFO[Skin.String(ButtonFocusColor)]</colordiffuse>
					</control>
					<control type="label">
						<!--Time-->
						<posx>10</posx>
						<posy>10</posy>
						<width>130</width>
						<height>25</height>
						<font>Reg26</font>
						<textcolor>$INFO[Skin.String(ButtonFocusTextColor)]</textcolor>
						<align>left</align>
						<label>[B]$INFO[ListItem.StartTime][/B]</label>
					</control>
					<control type="image">
						<!--Rec-->
						<animation effect="slide" start="0" end="50" time="0" reversible="false" condition="String.Contains(System.Time, AM) | String.Contains(System.Time, PM)">Conditional</animation>
						<posx>90</posx>
						<posy>-5</posy>
						<width>55</width>
						<height>55</height>
						<texture>pvr/icons/pvr_record.png</texture>
						<visible>ListItem.IsRecording</visible>
					</control>
					<control type="image">
						<animation effect="slide" start="0" end="50" time="0" reversible="false" condition="String.Contains(System.Time, AM) | String.Contains(System.Time, PM)">Conditional</animation>
						<!--Timer-->
						<posx>90</posx>
						<posy>-5</posy>
						<width>55</width>
						<height>55</height>
						<texture>pvr/icons/pvr_timer.png</texture>
						<visible>!ListItem.IsRecording + ListItem.HasTimer + !ListItem.HasTimerSchedule</visible>
					</control>
					<control type="label">
						<!--Channel Name-->
						<animation effect="slide" start="0" end="50" time="0" reversible="false" condition="String.Contains(System.Time, AM) | String.Contains(System.Time, PM)">Conditional</animation>
						<posx>100</posx>
						<posy>10</posy>
						<width>490</width>
						<height>25</height>
						<font>Reg28</font>
						<textcolor>$INFO[Skin.String(ButtonFocusTextColor)]</textcolor>
						<align>left</align>
						<aligny>center</aligny>
						<label>[B]$INFO[ListItem.Label][/B]</label>
						<visible>!ListItem.Isplaying + !ListItem.IsRecording + !ListItem.HasTimer</visible>
					</control>
					<control type="label">
						<!--Channel Name-->
						<animation effect="slide" start="0" end="50" time="0" reversible="false" condition="String.Contains(System.Time, AM) | String.Contains(System.Time, PM)">Conditional</animation>
						<posx>143</posx>
						<posy>10</posy>
						<width>490</width>
						<height>25</height>
						<font>Reg28</font>
						<textcolor>$INFO[Skin.String(ButtonFocusTextColor)]</textcolor>
						<align>left</align>
						<aligny>center</aligny>
						<label>[B]$INFO[ListItem.Label][/B]</label>
						<visible>ListItem.Isplaying | ListItem.IsRecording | ListItem.HasTimer</visible>
					</control>
					<control type="textbox">
						<!--Info Plot-->
						<posx>10</posx>
						<posy>38</posy>
						<width>650</width>
						<height>130</height>
						<font>Reg24</font>
						<align>left</align>
						<label fallback="19055">$INFO[ListItem.Plot]</label>
						<textcolor>$INFO[Skin.String(ButtonFocusTextColor)]</textcolor>
					</control>
				</focusedlayout>
			</control>

		</control>
	</controls>
</window>
