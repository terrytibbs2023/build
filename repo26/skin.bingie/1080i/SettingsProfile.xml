<?xml version="1.0" encoding="utf-8"?>
<!-- BINGIE -->
<window>
    <defaultcontrol always="true">155</defaultcontrol>
	
    <controls>
         <!--Global Background-->
        <include>GlobalBackground</include>
		<!-- Now Playing -->
		<include>NowPlayingBackground</include>		
        <!--Header-->
        <include>Header</include>
		
		<control type="group">
		<include>animation_window_open_close</include>
		<bottom>135</bottom>
		<height>810</height>
		
        <!--Panel-->
		<control type="image">
			<posx>60</posx>
			<width>1800</width>
			<texture border="15">diffuse/bgpanel.png</texture>
			<colordiffuse>$INFO[Skin.String(GeneralPanelsColor)]</colordiffuse>
		</control>
		
		<control type="image">
			<posx>60</posx>
			<width>510</width>
			<texture border="15">diffuse/bgpanel.png</texture>
			<colordiffuse>$INFO[Skin.String(GeneralPanelsColor)]</colordiffuse>
		</control>
			
			<control type="togglebutton" id="155">
                <posx>90</posx>
                <posy>30</posy>
                <width>450</width>
                <label>$LOCALIZE[128]</label>
                <onup>2</onup>
				<onright>2</onright>
				<onfocus>SetProperty(SkinSettingSection,155,Home)</onfocus>
				<usealttexture>String.IsEqual(Window(Home).Property(SkinSettingSection),155)</usealttexture>
				<include>SkinSettings_MenuButtonLarge</include>
            </control>
			
			<control type="label">
				<posx>600</posx>
				<posy>30</posy>
				<include>SkinSettings_Header</include>
				<label>$LOCALIZE[10130]</label>
			</control>
			
            <control type="list" id="2">
                <description>Control Area</description>
                <posx>600</posx>
                <posy>95</posy>
                <width>1230</width>
                <height>695</height>
                <onright>40</onright>
                <onup>4</onup>
				<onleft>155</onleft>
                <ondown>444</ondown>
                <pagecontrol/>
                <orientation>vertical</orientation>
                <itemlayout height="85">
					<control type="image">
                        <height>80</height>
                        <width>1230</width>
                        <texture border="10" colordiffuse="$INFO[Skin.String(ButtonColor)]">diffuse/panel.png</texture>
                    </control>
                    <control type="image">
                        <posx>20</posx>
                        <posy>10</posy>
                        <width>60</width>
                        <height>60</height>
                        <texture background="true" fallback="defaultuser.png">$INFO[ListItem.Icon]</texture>
                        <visible>!String.IsEmpty(ListItem.Icon)</visible>
                    </control>
                    <control type="label">
                        <left>20</left>
                        <posy>0</posy>
                        <width>700</width>
                        <height>74</height>
                        <align>left</align>
                        <aligny>center</aligny>
                        <info>ListItem.Label</info>
                        <textcolor>$INFO[Skin.String(ButtonTextColor)]</textcolor>
                        <font>Reg28</font>
                        <animation effect="slide" start="0" end="79" time="0" condition="!String.IsEmpty(ListItem.Icon)">Conditional</animation>
                    </control>
                    <control type="label">
                        <right>20</right>
                        <posy>0</posy>
                        <width>300</width>
                        <height>74</height>
                        <align>right</align>
                        <aligny>center</aligny>
                        <info>ListItem.Label2</info>
                        <textcolor>$INFO[Skin.String(ButtonTextColor)]</textcolor>
                        <font>Reg28</font>
                    </control>
                </itemlayout>
                <focusedlayout height="85">
                    <control type="group">
                        <visible>Control.HasFocus(2)</visible>
                        <control type="image">
                            <height>80</height>
                            <width>1230</width>
                            <texture border="10" colordiffuse="$INFO[Skin.String(ButtonFocusColor)]">diffuse/panel.png</texture>
                        </control>
                        <control type="image">
                            <posx>20</posx>
                            <posy>10</posy>
                            <width>60</width>
                            <height>60</height>
                            <texture background="true" fallback="defaultuser.png">$INFO[ListItem.Icon]</texture>
                            <visible>!String.IsEmpty(ListItem.Icon)</visible>
                        </control>
                        <control type="label">
                            <left>20</left>
                            <posy>0</posy>
                            <width>700</width>
                            <height>74</height>
                            <align>left</align>
                            <aligny>center</aligny>
                            <info>ListItem.Label</info>
                            <textcolor>$INFO[Skin.String(ButtonFocusTextColor)]</textcolor>
                            <font>Reg28</font>
                            <animation effect="slide" start="0" end="79" time="0" condition="!String.IsEmpty(ListItem.Icon)">Conditional</animation>
                        </control>
                        <control type="label">
                            <right>20</right>
                            <posy>0</posy>
                            <width>300</width>
                            <height>74</height>
                            <align>right</align>
                            <aligny>center</aligny>
                            <info>ListItem.Label2</info>
                            <textcolor>$INFO[Skin.String(ButtonFocusTextColor)]</textcolor>
                            <font>Reg28</font>
                        </control>
                    </control>
                    <control type="group">
                        <visible>!Control.HasFocus(2)</visible>
						<control type="image">
							<height>80</height>
							<width>1230</width>
							<texture border="10" colordiffuse="$INFO[Skin.String(ButtonColor)]">diffuse/panel.png</texture>
						</control>
                        <control type="image">
                            <posx>20</posx>
                            <posy>10</posy>
                            <width>60</width>
                            <height>60</height>
                            <texture background="true" fallback="defaultuser.png">$INFO[ListItem.Icon]</texture>
                            <visible>!String.IsEmpty(ListItem.Icon)</visible>
                        </control>
                        <control type="label">
                            <left>20</left>
                            <posy>0</posy>
                            <width>700</width>
                            <height>74</height>
                            <align>left</align>
                            <aligny>center</aligny>
                            <info>ListItem.Label</info>
                            <textcolor>$INFO[Skin.String(ButtonTextColor)]</textcolor>
                            <font>Reg28</font>
                            <animation effect="slide" start="0" end="79" time="0" condition="!String.IsEmpty(ListItem.Icon)">Conditional</animation>
                        </control>
                        <control type="label">
                            <right>20</right>
                            <posy>0</posy>
                            <width>300</width>
                            <height>74</height>
                            <align>right</align>
                            <aligny>center</aligny>
                            <info>ListItem.Label2</info>
                            <textcolor>$INFO[Skin.String(ButtonTextColor)]</textcolor>
                            <font>Reg28</font>
                        </control>
                    </control>
                </focusedlayout>
            </control>
        </control>
    </controls>
</window>