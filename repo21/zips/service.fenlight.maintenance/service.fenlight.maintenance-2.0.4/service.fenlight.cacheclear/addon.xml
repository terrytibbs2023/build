<addon id="service.fenlight.maintenance"
       name="Fenlight Maintenance Service"
       version="2.0.4"
       provider-name="Terry Tibbs">
    <requires>
        <import addon="xbmc.python" version="2.25.0"/>
    </requires>

    <extension point="xbmc.service" library="service.py" start="startup"/>

    <extension point="xbmc.addon.metadata">
        <summary lang="en_gb">Automated cache purge and addon updater for Fenlight</summary>
        <description lang="en_gb">
            Runs every 6 hours when Kodi is idle. Deletes Fenlight trakt cache, forces repo and addon updates, and optionally displays progress notifications.
        </description>
        <platform>all</platform>
        <license>MIT</license>
        <language>en_gb</language>
        <assets>
            <icon>icon.png</icon>
            <settings>settings.xml</settings>
        </assets>
    </extension>
</addon>

